<?xml version="1.0" encoding="UTF-8" ?>

<config xmlns="http://thelia.net/schema/dic/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://thelia.net/schema/dic/config http://thelia.net/schema/dic/config/thelia-1.0.xsd">

    <loops>
        <!-- sample definition
        <loop name="MySuperLoop" class="PaymentMangopay\Loop\MySuperLoop" />
        -->
        <loop name="escrowwalletloop" class="PaymentMangopay\Loop\EscrowWalletLoop" />
        <loop name="paymentmangopayapiloop" class="PaymentMangopay\Loop\PaymentMangopayApiLoop" />

        <loop name="mangopayusersloop" class="PaymentMangopay\Loop\MangopayUsersLoop" />
        <loop name="mangopayapiusersloop" class="PaymentMangopay\Loop\MangopayApiUsersLoop" />
        <loop name="mangopaynaturalusersloop" class="PaymentMangopay\Loop\MangopayApiNaturalUsersLoop" />
        <loop name="mangopaylegalusersloop" class="PaymentMangopay\Loop\MangopayApiLegalUsersLoop" />

        <loop name="preauthorizationloop" class="PaymentMangopay\Loop\PreauthorizationLoop" />
        <loop name="preauthorizationdetailloop" class="PaymentMangopay\Loop\PreauthorizationDetailLoop" />
        <loop name="payindetailloop" class="PaymentMangopay\Loop\PayinDetailLoop" />

        <loop name="transactionapiloop" class="PaymentMangopay\Loop\MangopayApiTransactionLoop" />
        <loop name="refundapiloop" class="PaymentMangopay\Loop\MangopayApiRefundLoop" />
        <loop name="walletapiloop" class="PaymentMangopay\Loop\MangopayApiWalletLoop" />


    </loops>

    <forms>
        <!--
        <form name="MyFormName" class="PaymentMangopay\Form\MySuperForm" />
        -->
        <form name="mangopay.configurationform" class="PaymentMangopay\Form\ConfigurationForm" />
        <form name="mangopay.escrowwallet" class="PaymentMangopay\Form\EscrowwalletForm" />
        <form name="naturaluser.mangopay.creation" class="PaymentMangopay\Form\NaturalUserMangopayCreationForm" />
        <form name="naturaluser.mangopay.edition" class="PaymentMangopay\Form\NaturalUserMangopayEditionForm" />
        <form name="legaluser.mangopay.creation" class="PaymentMangopay\Form\LegalUserMangopayCreationForm" />
        <form name="legaluser.mangopay.edition" class="PaymentMangopay\Form\LegalUserMangopayEditionForm" />

    </forms>

    <commands>
        <!--
        <command class="PaymentMangopay\Command\MySuperCommand" />
        -->
    </commands>

    <services>
        <service id="mangopay.sendconfirmation" class="PaymentMangopay\EventListeners\SendConfirmationEmail" scope="request">
            <argument type="service" id="thelia.parser" />
            <argument type="service" id="mailer"/>
            <!--<argument type="service" id="request_stack"/><argument type="service" id="request.context"/>-->
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="mangopay.setcardtype" class="PaymentMangopay\EventListeners\SetCardType" scope="request">
            <argument type="service" id="request"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>

    <hooks>
        <hook id="paymentmangopay.hook" class="PaymentMangopay\Hook\PaymentMangopayHook">
            <tag name="hook.event_listener" event="order-invoice.payment-extra" type="front" method="onOrderInvoicePaymentExtra" />
        </hook>
    </hooks>

    <!--
    <hooks>
        <hook id="paymentmangopay.hook" class="PaymentMangopay\Hook\MySuperHook">
            <tag name="hook.event_listener" event="main.body.bottom" type="front|back|pdf|email" method="onMainBodyBottom" />
        </hook>
    </hooks>
    -->

