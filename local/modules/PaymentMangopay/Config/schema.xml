<?xml version="1.0" encoding="UTF-8"?>
<database defaultIdMethod="native" name="thelia"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../core/vendor/propel/propel/resources/xsd/database.xsd" >

    <table name="mangopay_configuration" namespace="PaymentMangopay\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER" />
        <column name="fees" required="true" type="FLOAT" />
        <column name="clientid" required="true" size="255" type="VARCHAR" />
        <column name="clientpassword" required="true" size="255" type="VARCHAR" />
        <column name="temporaryfolder" required="true" size="255" type="VARCHAR" />
        <column name="deferred_payment" required="true" defaultValue="0" type="TINYINT" />
        <column name="days" required="true" defaultValue="0" type="INTEGER" />
        <behavior name="timestampable" />
    </table>

    <table name="order_preauthorisation" namespace="PaymentMangopay\Model">
        <column name="order_id" required="true" type="INTEGER"  primaryKey="true" />
        <column name="preauthorization" required="true" type="INTEGER"  primaryKey="true" />
        <column name="status" required="true" size="255" type="VARCHAR" />
        <index name="idx_order_preauth">
          <index-column name="order_id" />
          <index-column name="preauthorization" />
        </index>
        <foreign-key foreignTable="order" name="order_preauthorisation_order_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="order_id" />
        </foreign-key>
        <behavior name="timestampable" />
    </table>

    <!--
    Lien entre un customer ou autre et un user/wallet dans mangopay
    thelia_seller => référence à une table contenant les vendeurs ou autre
    is_default => portefeuille tampon pour réaliser les paiements fractionnés
    -->
    <table name="mangopay_wallet" namespace="PaymentMangopay\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER" />
        <column name="user" required="true" type="INTEGER" />
        <column name="wallet" required="true" type="INTEGER" />
        <column name="is_default" defaultValue="0" type="INTEGER" />
        <column name="thelia_seller" defaultValue="0" type="INTEGER" />
    </table>

    <!--
    Chaque transaction réussit sur l'escrow_wallet est dispatché sur plusieurs user_wallet.
    -->
    <table name="mangopay_order_transfert" namespace="PaymentMangopay\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER" />
        <column name="transaction_ref" required="true" size="100" type="VARCHAR" />
        <column name="transaction_status" required="true" size="255" type="VARCHAR" />
        <column name="escrow_wallet" required="true" type="INTEGER" />
        <column name="user_wallet" required="true" type="INTEGER" />
        <column name="transfert_ref" required="true" type="INTEGER" />
        <column name="transfert_status" required="true" size="255" type="VARCHAR" />
        <index name="idx_order_transfert">
          <index-column name="transaction_ref" />
        </index>
        <behavior name="timestampable" />
    </table>

    <!--
    escrowwallet est un portefeuille tampon pour réaliser les paiements fractionnés

    <table name="mangopay_escrowwallet" namespace="PaymentMangopay\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER" />
        <column name="user" required="true" type="INTEGER" />
        <column name="wallet" required="true" type="INTEGER" />
    </table>
    -->


    <!--
    See propel documentation on http://propelorm.org for all information about schema file

    <table name="product_rel" namespace="PaymentMangopay\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER" />
        <column defaultValue="0" name="visible" required="true" type="TINYINT" />
        <column defaultValue="0" name="position" required="true" type="INTEGER" />
        <column name="title" size="255" type="VARCHAR" />
        <column name="description" type="CLOB" />
        <column name="chapo" type="LONGVARCHAR" />
        <column name="postscriptum" type="LONGVARCHAR" />
        <foreign-key foreignTable="product" name="fk_product_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="product_id" />
        </foreign-key>
        <behavior name="timestampable" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="title, description, chapo, postscriptum" />
        </behavior>
        <behavior name="versionable">
            <parameter name="log_created_at" value="true" />
            <parameter name="log_created_by" value="true" />
        </behavior>
    </table>
    -->
    <external-schema filename="local/config/schema.xml" referenceOnly="true" />
</database>
